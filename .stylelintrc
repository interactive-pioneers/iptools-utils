{
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "ignoreFiles": ["**/*.css", "**/*.js", "node_modules/**/*"],
  "rules": {
    "block-no-empty": true,
    "block-opening-brace-newline-after": "always",
    "color-hex-case": "lower",
    "color-hex-length": "short",
    "color-named": "never",
    "color-no-invalid-hex": true,
    "comment-no-empty": true,
    "declaration-bang-space-after": "never",
    "declaration-bang-space-before": "always",
    "declaration-block-semicolon-newline-after": "always",
    "declaration-block-semicolon-newline-before": "never-multi-line",
    "declaration-block-single-line-max-declarations": 1,
    "declaration-block-trailing-semicolon": "always",
    "declaration-colon-newline-after": "always-multi-line",
    "declaration-colon-space-after": "always-single-line",
    "declaration-colon-space-before": "never",
    "font-family-no-missing-generic-family-keyword": true,
    "function-calc-no-unspaced-operator": true,
    "function-comma-space-before": "never",
    "function-url-no-scheme-relative": true,
    "function-url-quotes": "always",
    "length-zero-no-unit": true,
    "max-empty-lines": 1,
    "selector-type-no-unknown": true,
    "shorthand-property-no-redundant-values": true,
    "string-no-newline": true,
    "unit-case": "lower",
    "unit-no-unknown": true,
    "value-no-vendor-prefix": true,
    "scss/partial-no-import": true,
    "scss/function-color-relative": true,
    "scss/no-duplicate-mixins": true,
    "scss/dollar-variable-colon-space-after": "always",
    "scss/dollar-variable-colon-space-before": "never",
    "order/order": [
      {
        "type": "at-rule",
        "name": "include"
      },
      "declarations",
      {
        "type": "at-rule",
        "name": "include",
        "hasBlock": true
      }
    ],
    "order/properties-order": [
      {
        "groupName": "Positioning",
        "emptyLineBefore": "always",
        "properties": [
          "position",
          "top",
          "right",
          "bottom",
          "left",
          "grid-row",
          "grid-row-start",
          "grid-row-end",
          "grid-column",
          "grid-column-start",
          "grid-column-end",
          "grid-area",
          "place-self",
          "align-self",
          "justify-self",
          "order",
          "z-index",
          "float",
          "clear"
        ],
        "noEmptyLineBetween": true
      },
      {
        "groupName": "Box Model",
        "emptyLineBefore": "always",
        "properties": [
          "display",
          "overflow",
          "overflow-x",
          "overflow-y",
          "box-sizing",
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left",
          "width",
          "min-width",
          "max-width",
          "height",
          "min-height",
          "max-height",
          "flex",
          "flex-grow",
          "flex-shrink",
          "flex-basis",
          "border-collapse",
          "border-spacing",
          "border",
          "border-width",
          "border-style",
          "border-color",
          "border-top",
          "border-top-width",
          "border-top-style",
          "border-top-color",
          "border-right",
          "border-right-width",
          "border-right-style",
          "border-right-color",
          "border-bottom",
          "border-bottom-width",
          "border-bottom-style",
          "border-bottom-color",
          "border-left",
          "border-left-width",
          "border-left-style",
          "border-left-color",
          "clip",
          "clip-path"
        ],
        "noEmptyLineBetween": true
      },
      {
        "groupName": "Layout Containers",
        "emptyLineBefore": "always",
        "properties": [
          "grid",
          "grid-template",
          "grid-template-rows",
          "grid-auto-rows",
          "grid-template-columns",
          "grid-auto-columns",
          "grid-template-areas",
          "gap",
          "grid-gap",
          "grid-row-gap",
          "grid-column-gap",
          "flex-flow",
          "flex-direction",
          "flex-wrap",
          "place-content",
          "align-content",
          "justify-content",
          "place-items",
          "align-items",
          "justify-items",
          "table-layout",
          "caption-side",
          "empty-cells",
          "columns",
          "column-gap",
          "column-fill",
          "column-rule",
          "column-span",
          "column-count",
          "column-width"
        ],
        "noEmptyLineBetween": true
      },
      {
        "groupName": "Display",
        "emptyLineBefore": "always",
        "properties": [
          "visibility",
          "opacity",
          "appearance",
          "border-radius",
          "border-top-left-radius",
          "border-top-right-radius",
          "border-bottom-right-radius",
          "border-bottom-left-radius",
          "border-image",
          "border-image-source",
          "border-image-slice",
          "border-image-width",
          "border-image-outset",
          "border-image-repeat",
          "outline",
          "outline-color",
          "outline-offset",
          "outline-style",
          "outline-width",
          "background",
          "background-color",
          "background-image",
          "background-repeat",
          "background-attachment",
          "background-position",
          "background-position-x",
          "background-position-y",
          "background-origin",
          "background-size",
          "background-clip",
          "fill",
          "box-shadow",
          "filter",
          "backdrop-filter"
        ],
        "noEmptyLineBetween": true
      },
      {
        "groupName": "Text",
        "emptyLineBefore": "always",
        "properties": [
          "color",
          "font",
          "font-family",
          "font-size",
          "font-size-adjust",
          "font-smoothing",
          "font-style",
          "font-variant",
          "font-weight",
          "line-height",
          "vertical-align",
          "direction",
          "text-align",
          "text-align-last",
          "text-decoration",
          "text-indent",
          "text-overflow",
          "text-rendering",
          "text-shadow",
          "text-size-adjust",
          "text-transform",
          "text-wrap",
          "word-wrap",
          "overflow-wrap",
          "letter-spacing",
          "word-spacing",
          "word-break",
          "hyphens",
          "white-space",
          "tab-size",
          "list-style",
          "list-style-position",
          "list-style-type",
          "list-style-image"
        ],
        "noEmptyLineBetween": true
      },
      {
        "groupName": "Transform",
        "emptyLineBefore": "always",
        "properties": [
          "transform",
          "transform-function",
          "transform-origin",
          "transform-style",
          "perspective",
          "perspective-origin",
          "backface-visibility"
        ],
        "noEmptyLineBetween": true
      },
      {
        "groupName": "Transition / Animation",
        "emptyLineBefore": "always",
        "properties": [
          "transition",
          "transition-property",
          "transition-duration",
          "transition-timing-function",
          "transition-delay",
          "animation",
          "animation-name",
          "animation-duration",
          "animation-timing-function",
          "animation-delay",
          "animation-iteration-count",
          "animation-direction",
          "animation-fill-mode",
          "animation-play-state"
        ],
        "noEmptyLineBetween": true
      },
      {
        "groupName": "Various",
        "emptyLineBefore": "always",
        "properties": [
          "cursor",
          "pointer-events",
          "resize",
          "user-select",
          "content"
        ],
        "noEmptyLineBetween": true
      }
    ]
  }
}
